<div class="container d-flex justify-content-center flex-column p-3 col-sm-12">

  <form action="" class="login-form">
    <div>
      <label for="email-login">email:</label>
      <input type="email" id="email-login" class="form-control" required>
    </div>
    <div>
      <label for="password-login">password:</label>
      <input type="password" id="password-login" class="form-control" minlength="4" required>
    </div>
    <div>
      <button type="submit" class="submit-button">login</button>
    </div>
  </form>

  <form class="signup-form">
    <div>
      <label for="username-signup">username:</label>
      <input type="text" id="username-signup" class="form-control" required />
    </div>
    <div>
      <label for="email-signup">email:</label>
      <input type="email" id="email-signup" class="form-control" required />
    </div>
    <div>
      <label for="password-signup">password:</label>
      <input type="password" id="password-signup" class="form-control" minlength="4" required />
    </div>
    <div>
      <button type="submit" class="submit-button">signup</button>
    </div>
  </form>
</div>

<script src="/javascript/login.js"></script>
<script src="/javascript/signup.js"></script>